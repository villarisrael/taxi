<div style="margin-left:10px;margin-right:10px">
   @* <link rel="stylesheet" href="~/css/estilo.css">*@
    @model Certificado2.Modelos.Certificadores

    @{
        ViewData["Title"] = "Crear";
        Layout = "_Layout";
    }


  

    <div class="register_wrap section_padding_b" style="padding-top:60px">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-lg-7 col-md-9">
                    <div class="register_form padding_default shadow_sm">

                        <h4>Ingresar nuevo Cerificador</h4>
             <form method="post" asp-action="Crear" id="MiFormulario" enctype="multipart/form-data">
              
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="RazonSocial" class="control-label">Razón social</label>
                    <input asp-for="RazonSocial" class="form-control" placeholder="Ingresar razón social" name="RazonSocial" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="NombreResponsable" class="control-label">Responsable</label>
                    <input asp-for="NombreResponsable" class="form-control" placeholder="Ingresar nombre del responsable" name="NombreResponsable" />
                    <span asp-validation-for="NombreResponsable" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="Email" class="control-label">E-mail</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresar e-mail" name="Email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="CP" class="control-label">CP</label>
                    <input asp-for="CP" class="form-control" placeholder="Ingresar CP" name="CP"/>
                    <span asp-validation-for="CP" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="Telefono" class="control-label">Telefono</label>
                    <input asp-for="Telefono" maxlength="10" class="form-control" placeholder="Ingresar Telefono" name="Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="EmailFacturacion" class="control-label">E-mail Facturación</label>
                    <input asp-for="EmailFacturacion" class="form-control" placeholder="Ingresar e-mail" name="EmailFacturacion" type="email" />
                    <span asp-validation-for="EmailFacturacion" class="text-danger"></span>
                </div>
               
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="RFC" class="control-label">RFC</label>
                    <input asp-for="RFC" maxlength="13" class="form-control" placeholder="Ingresar RFC" name="RFC" />
                    <span asp-validation-for="RFC" class="text-danger"></span>
                </div>


                            <div class="mb-3">
                                <label asp-for="IDVendedor" class="form-label"></label>
                                <select asp-for="IDVendedor" class="form-select" name="IDVendedor">
                                    <option value="">Seleccione un vendedor</option>
                                    @if (ViewBag.Vendedores != null)
                                    {
                                        foreach (Certificado2.Modelos.Vendedor item in ViewBag.Vendedores)
                                        {
                                            <option value="@item.IDVendedor">@item.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="IDVendedor" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <div class="form-check">

                                    <input asp-for="joyeria" name="joyeria" id="joyeria" class="form-check-input" type="checkbox" value="true") />
                                    <label asp-for="joyeria" class="form-check-label">Joyería</label>
                                </div>
                                <span asp-validation-for="joyeria" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <div class="form-check">

                                    <input asp-for="artesania" name="artesania" id="artesania" class="form-check-input" type="checkbox" value="true" ) />
                                    <label asp-for="artesania" class="form-check-label">Artesanía</label>
                                </div>
                                <span asp-validation-for="artesania" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <div class="form-check">

                                    <input asp-for="numismatica" name="numismatica" id="numismatica" class="form-check-input" type="checkbox" value="true" ) />
                                    <label asp-for="numismatica" class="form-check-label">Numismática</label>
                                </div>
                                <span asp-validation-for="numismatica" class="text-danger"></span>
                            </div>




                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="Logo1" class="control-label">Logo</label>
                    <input asp-for="Logo1" type="file" class="form-control" name="Logo1" />
                    <span asp-validation-for="Logo1" class="text-danger"></span>
                </div>
             
                <div class="form-group" style="margin-bottom: 15px;">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-outline-secondary">Regresar a la lista</a>
                </div>
            </form>

                        <!-- Modal de Advertencia -->
                        <div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="alertModalLabel">Advertencia</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Debes seleccionar al menos una opción: Joyería, Artesanía o Numismática.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

        </div>
    </div>
</div>
</div>
</div>
</div>

<script>
    document.getElementById("MiFormulario").onsubmit = function (event) {
        // Obtener los checkboxes
        var joyeria = document.getElementById("joyeria").checked;
        var artesania = document.getElementById("artesania").checked;
        var numismatica = document.getElementById("numismatica").checked;

        // Verificar si al menos uno está seleccionado
        if (!joyeria && !artesania && !numismatica) {
            event.preventDefault(); // Evita el envío del formulario
            // Muestra el modal de advertencia
            var alertModal = new bootstrap.Modal(document.getElementById('alertModal'));
            alertModal.show();
        }
    };
</script>