@model Certificado2.Modelos.Conductor

@{
    ViewData["Title"] = "Eliminar Conductor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card de Confirmación de Eliminación -->
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmación de Eliminación</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger"><strong>¡Advertencia!</strong> Esta acción es irreversible. ¿Estás seguro de que deseas eliminar a este conductor?</p>

                    <div class="mb-4">
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.IDConductor</dd>

                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.Nombre @Model.Nombre</dd>

                            <dt class="col-sm-4">Correo:</dt>
                            <dd class="col-sm-8">@Model.mail</dd>

                            <!-- Agregar más detalles del conductor si es necesario -->
                        </dl>
                    </div>

                    <div class="d-flex justify-content-between">
                        <!-- Formulario para Confirmar Eliminación -->
                        <form asp-action="DeleteConfirmed" method="post" class="w-50">
                            <input type="hidden" name="id" value="@Model.IDConductor" />
                            <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                        </form>

                        <!-- Botón para Cancelar -->
                        <a href="@Url.Action("Index")" class="btn btn-secondary w-50">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
