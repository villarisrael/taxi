

@{
    ViewData["Title"] = "Comprar Folios";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    .form-control, .form-select {
        /* Asegúrate de que el padding y el borde sean los mismos */
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        border: 1px solid #ced4da;
    }
</style>

<div class="container mt-4" style="padding-top:100px">
    <!-- Card for Folios Disponibles -->
    <h2 class="mb-0">
        Folios disponibles:
        <span class="badge bg-primary">Plan: @ViewBag.FoliosDisponibles.Plan  Folios:@ViewBag.FoliosDisponibles.Disponibles </span>
    </h2>
    <div class="card mb-4">
       

        <div class="card-header">
            Añadir Folios
        </div>
        <div class="card-body">
          
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["MensajeExito"]
                </div>
            }

            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["MensajeError"]
                </div>
            }

            <form  method="post" class="needs-validation" novalidate>
                <input type="hidden" name="certificadorId" value="@ViewBag.IDCertificador">

                <div class="mb-3">
                    <label for="cantidad" class="form-label">Cantidad de Folios</label>
                    <input type="number" id="cantidad" name="cantidad" class="form-control" placeholder="Ingrese la cantidad de folios" min="50" required>
                    <div class="invalid-feedback">
                        La cantidad de folios es obligatoria y debe ser mayor que 50.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="plan" class="form-label">Plan</label>
                    <select id="plan" name="plan" class="form-select" required>
                        <option value="" disabled selected>Seleccione un plan...</option>
                        <option value="Individual">Individual - 1 peso por folio (mínimo 50 folios)</option>
                        <option value="Mensual_100">Mensual 100 - 100 pesos por mes (máximo 500 folios)</option>
                        <option value="Mensual_299">Mensual 299 - 299 pesos por mes (máximo 2000 folios)</option>
                    </select>
                    <div class="invalid-feedback">
                        Debe seleccionar un plan.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Añadir Folios</button>
            </form>
        </div>
    </div>
</div>


    
        <script>
            // Example of client-side form validation with Bootstrap
            (function () {
                'use strict'

                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.querySelectorAll('.needs-validation')

                // Loop over them and prevent submission
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        </script>
    
