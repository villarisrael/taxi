@model Certificado2.Modelos.Conductor

@{
    ViewData["Title"] = "Detalles del Conductor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalles del Conductor</h4>
                </div>
                <div class="card-body">
                
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.IDConductor</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Correo Electrónico:</dt>
                        <dd class="col-sm-8">@Model.mail</dd>

                        <dt class="col-sm-4">Dirección:</dt>
                        <dd class="col-sm-8">@Model.Direccion, @Model.Colonia, @Model.Ciudad</dd>

                        <dt class="col-sm-4">Licencia:</dt>
                        <dd class="col-sm-8">@Model.Licencia</dd>

                        <dt class="col-sm-4">Placa:</dt>
                        <dd class="col-sm-8">@Model.Placa</dd>

                        <dt class="col-sm-4">INE:</dt>
                        <dd class="col-sm-8">@Model.INE</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">@Model.IDEstado</dd> 
                    </dl>

                 
                    <div class="d-flex justify-content-between mt-4">
                        
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la lista
                        </a>

                        <a href="@Url.Action("Edit", new { id = Model.IDConductor })" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>

                       
                        <a href="@Url.Action("Delete", new { id = Model.IDConductor })" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agregar estilos de Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- FontAwesome para los iconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
