@model Certificado2.Modelos.Conductor

@{
    ViewData["Title"] = "Editar Conductor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card para el formulario de edición -->
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Editar Datos del Conductor</h4>
                </div>
                <div class="card-body">
                    <!-- Formulario de edición -->
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="IDConductor" value="@Model.IDConductor" />

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Teléfono -->
                        <div class="mb-3">
                            <label for="Telefono" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" required />
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                        </div>

                        <!-- Correo Electrónico -->
                        <div class="mb-3">
                            <label for="mail" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="mail" name="mail" value="@Model.mail" required />
                            @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                        </div>

                        <!-- Dirección -->
                        <div class="mb-3">
                            <label for="Direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="Direccion" name="Direccion" value="@Model.Direccion" required />
                            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                        </div>

                        <!-- Colonia -->
                        <div class="mb-3">
                            <label for="Colonia" class="form-label">Colonia</label>
                            <input type="text" class="form-control" id="Colonia" name="Colonia" value="@Model.Colonia" required />
                            @Html.ValidationMessageFor(model => model.Colonia, "", new { @class = "text-danger" })
                        </div>

                        <!-- Ciudad -->
                        <div class="mb-3">
                            <label for="Ciudad" class="form-label">Ciudad</label>
                            <input type="text" class="form-control" id="Ciudad" name="Ciudad" value="@Model.Ciudad" required />
                            @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
                        </div>

                        <!-- Licencia -->
                        <div class="mb-3">
                            <label for="Licencia" class="form-label">Licencia</label>
                            <input type="text" class="form-control" id="Licencia" name="Licencia" value="@Model.Licencia" required />
                            @Html.ValidationMessageFor(model => model.Licencia, "", new { @class = "text-danger" })
                        </div>

                        <!-- Placa -->
                        <div class="mb-3">
                            <label for="Placa" class="form-label">Placa</label>
                            <input type="text" class="form-control" id="Placa" name="Placa" value="@Model.Placa" required />
                            @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                        </div>

                        <!-- INE -->
                        <div class="mb-3">
                            <label for="INE" class="form-label">INE</label>
                            <input type="text" class="form-control" id="INE" name="INE" value="@Model.INE" required />
                            @Html.ValidationMessageFor(model => model.INE, "", new { @class = "text-danger" })
                        </div>

                        <!-- Estado (IDEstado) -->
                        <div class="mb-3">
                            <label for="IDEstado" class="form-label">Estado</label>
                            <input type="text" class="form-control" id="Estado" name="IDEstado" value="@Model.IDEstado" placeholder="Escribe el estado" required />
                            @Html.ValidationMessageFor(model => model.IDEstado, "", new { @class = "text-danger" })
                        </div>

                        <!-- Estado (IDPais) -->
                        <div class="mb-3">
                            <label for="IDPais" class="form-label">Pais</label>
                            <input type="text" class="form-control" id="Pais" name="Pais" value="@Model.IDPais" placeholder="México" required />
                            @Html.ValidationMessageFor(model => model.IDPais, "", new { @class = "text-danger" })
                        </div>

                        <!-- Activo -->
                        <div class="mb-3">
                            <label for="Activo" class="form-label">Activo</label>
                            <input type="checkbox" class="form-check-input" id="Activo" name="Activo" @(Model.Activo == 1 ? "checked" : "") />
                            @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-4">
                            <!-- Botón de guardar cambios -->
                            <button type="submit" class="btn btn-success w-50">Guardar Cambios</button>

                            <!-- Botón de cancelar -->
                            <a href="@Url.Action("Index")" class="btn btn-secondary w-50">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agregar estilos de Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- FontAwesome para los iconos (si deseas usarlos para acciones) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
