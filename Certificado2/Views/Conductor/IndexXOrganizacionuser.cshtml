@model IEnumerable<Certificado2.Modelos.Conductor>

@{
    Layout = "_Layout";
}

<div class="container mt-5" style="padding-top:60px">
    <div class="mb-3">
        <a href="@Url.Action("Create", "Conductor", new { idOrganizacion = ViewBag.IDOrganizacion })" class="btn btn-primary">
            Agregar Conductor
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Listado de Conductores de @ViewBag.Nombredeorganizacion</h2>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Licencia</th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conductor in Model)
                        {
                            <tr>
                                <td>@conductor.Nombre</td>
                                <td>@conductor.Telefono</td>
                                <td>@conductor.mail</td>
                                <td>@conductor.Direccion</td>
                                <td>@conductor.Licencia</td>

                                <td>
                                    <div class="btn-group" role="group" aria-label="Acciones">
                                        <a href="@Url.Action("Details", "Conductor", new { id = conductor.IDConductor })" class="btn btn-info btn-sm">
                                            Ver Detalles
                                        </a>
                                        <a href="@Url.Action("Edit", "Conductor", new { id = conductor.IDConductor })" class="btn btn-warning btn-sm">
                                            Editar
                                        </a>
                                        <a href="@Url.Action("Delete", "Conductor", new { id = conductor.IDConductor })" class="btn btn-danger btn-sm">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        @if (ViewBag.Page > 1)
                        {
                            <a asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" asp-route-pageSize="@ViewBag.PageSize" class="btn btn-secondary btn-sm">Anterior</a>
                        }
                    </div>

                    <div>
                        Página @ViewBag.Page de @ViewBag.TotalPages
                    </div>

                    <div>
                        @if (ViewBag.Page < ViewBag.TotalPages)
                        {
                            <a asp-action="Index" asp-route-page="@(ViewBag.Page + 1)" asp-route-pageSize="@ViewBag.PageSize" class="btn btn-secondary btn-sm">Siguiente</a>
                        }
                    </div>
                </div>
            }
            else
            {
                <p>No hay conductores registrados en esta organización.</p>
            }
        </div>
    </div>
</div>
