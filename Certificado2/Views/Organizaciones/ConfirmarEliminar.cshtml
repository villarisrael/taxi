@model Certificado2.Modelos.Organizacion
@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">¡Atención!</h4>
                <p>Estás a punto de eliminar esta organización. Esta acción no puede deshacerse.</p>
                <hr>
                <p class="mb-0">Detalles de la organización:</p>
                <ul>
                    <li><strong>Razón Social:</strong> @Model.RazonSocial</li>
                    <li><strong>Teléfono:</strong> @Model.Telefono</li>
                    <li><strong>Email:</strong> @Model.Email</li>
                </ul>
            </div>

            <div class="d-flex justify-content-between mt-4">
            
                <form method="post" asp-action="Eliminar" asp-route-id="@Model.id">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-lg w-100 me-2">
                        <i class="fa fa-trash me-2"></i>Eliminar
                    </button>
                </form>


                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg w-100 ms-2">
                    <i class="fa fa-times me-2"></i>Regresar
                </a>
            </div>
        </div>
    </div>
</div>


<div class="mt-5"></div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
